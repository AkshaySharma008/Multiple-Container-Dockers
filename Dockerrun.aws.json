{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions" : [
        {
            "name": "client",
            "image": "akshay008/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "akshay008/multi-server",
            "hostname": "api",
            "essential": false            
        },
        {
            "name": "worker",
            "image": "akshay008/multi-worker",
            "hostname": "worker",
            "essential": false            
        },
        {
            "name": "nginx",
            "image": "akshay008/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort":80,
                    "containerPort":80
                }
            ],
            "links": ["client" , "server"]            
        }
    ]
}